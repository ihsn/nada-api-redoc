              },
              "affiliation":{
                "title":"Affiliation",
                "type":"string"
              },
              "abbreviation":{
                "title":"Abbreviation",
                "type":"string"
              },
              "role":{
                "title":"Role",
                "type":"string"
              },
              "uri":{
                "title":"URI",
                "type":"string"
              }
            },
            "required":[
